# Azure Speech Service - Required for speech-to-text transcription
# Find these values in your Azure Speech Service resource in the Azure portal
AZURE_SPEECH_KEY=your_speech_key_here
AZURE_SPEECH_ENDPOINT=your_speech_endpoint_here  # E.g., https://westus2.api.cognitive.microsoft.com/

# Azure OpenAI Service - Required for extracting selling points
# Find these values in your Azure OpenAI Service resource in the Azure portal
AZURE_OPENAI_API_KEY=your_openai_key_here
AZURE_OPENAI_API_VERSION=your_api_version_here  # E.g., 2023-05-15 or 2025-04-01-preview
AZURE_OPENAI_ENDPOINT=your_openai_endpoint_here  # E.g., https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=your_model_deployment_name_here  # E.g., gpt-4.1, etc.

# Azure Content Understanding Service - Required for video segment analysis
# Find these values in your Azure Content Understanding Service resource in the Azure portal
AZURE_CONTENT_UNDERSTANDING_ENDPOINT=your_content_understanding_endpoint_here  # E.g., https://your-resource-name.cognitiveservices.azure.com
AZURE_CONTENT_UNDERSTANDING_API_VERSION=your_api_version_here  # E.g., 2024-12-01-preview
AZURE_CONTENT_UNDERSTANDING_API_KEY=your_content_understanding_api_key_here
